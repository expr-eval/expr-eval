{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "types": ["vite/client", "vitest/globals"],
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.js",
    "test/**/*.js",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
